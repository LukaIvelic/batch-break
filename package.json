{
  "devDependencies": {
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4"
  },
  "scripts": {
    "prepare": "husky"
  },
  "lint-staged": {
    "frontend/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix --config frontend/eslint.config.mjs",
      "prettier --write"
    ],
    "backend/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix --config backend/eslint.config.mjs",
      "prettier --write"
    ],
    "**/*.{json,css,md}": "prettier --write"
  }
}
